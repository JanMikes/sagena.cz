{
  "kind": "collectionType",
  "collectionName": "intranet_news_articles",
  "info": {
    "singularName": "intranet-news-article",
    "pluralName": "intranet-news-articles",
    "displayName": "A - Intranet - Aktuality"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "slug": {
      "type": "uid",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "targetField": "title",
      "required": true
    },
    "date": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "image": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "text": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "video": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "components.video",
      "repeatable": false
    },
    "gallery": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "components.photo-gallery",
      "repeatable": false
    },
    "documents": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "component": "components.documents",
      "repeatable": false
    }
  }
}
